{
  "presets": ["react", "es2015", "stage-0"], // 相当于打包了，这里每个preset都包含了一些plugins，打包使用

  "plugins": [
    "transform-runtime", // runtime插件，转换一些es6的语法
    "add-module-exports", // 支持 export default 写法
    "transform-decorators-legacy", // 继承了babel 5 的一些东西
    "transform-react-display-name" // 在 React.createClass调用的时候，添加displayName
  ],

  "env": {
    "development": {
      "plugins": [
        "typecheck",
        ["react-transform", {
            "transforms": [{
                "transform": "react-transform-catch-errors",
                "imports": ["react", "redbox-react"]
              }
            ]
        }] // react-transform 用于热加载
      ]
    }
  }
}
